<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ project_title }} - {{ block('title') }}</title>
    <!-- Bootstrap core CSS -->
    <link href="{{ app.config('path_prefix') }}/static/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ app.config('path_prefix') }}/static/css/admin.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<div class="container">
    <div class="header">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li role="presentation" class="active">
                    <a href="{{ app.urlFor('lots') }}">лоты</a>
                </li>
                <li role="presentation">
                    <a href="#">страницы</a>
                </li>
            </ul>
        </nav>
        <h3 class="text-muted">{{ project_title }}</h3>
    </div>
    <a href="{{ app.urlFor('new_lot') }}" class="btn btn-default pull-right">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Новый лот
    </a>
    <div>
        <h1>{{ block('title') }}</h1>
    </div>
    <div class="row" style="margin-top: 3em">
        <div class="col-lg-12">
            {% if flash['success'] %}
                <div class="alert alert-success"
                     role="alert">{{ flash['success'] }}</div>
            {% elseif flash['error'] %}
                <div class="alert alert-warning"
                     role="alert">{{ flash['error'] }}</div>
            {% endif %}
            {{ block('body') }}
        </div>
    </div>

    <footer class="footer">
        <p>&copy; {{ project_title }} 2014</p>
    </footer>

</div> <!-- /container -->
</body>
</html>
