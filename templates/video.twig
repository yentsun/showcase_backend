<video autoplay="true" loop="true" id="video_{{ id }}" class="video-js vjs-default-skin"
       preload="auto" width="100%" height="100%"
       data-setup='{"example_option":true}'>
    <source src="video/main_{{ id }}.mp4" type='video/mp4' />
    <source src="video/main_{{ id }}.webm" type='video/webm' />
    <source src="video/main_{{ id }}.ogv" type='video/ogg' />
    <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
</video>